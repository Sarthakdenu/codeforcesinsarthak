#include <bits/stdc++.h>

using namespace std;

int main() {
    int t;
    cin>>t;
    int n;
    int d;
    for(int i=0;i<t;i++){
        cin>>n>>d;
        int arr[n];
        for(int k=0;k<n;k++){
            cin>>arr[k];
        }
        
        int j=1;
        int count=arr[0];
        bool flag=true;
        while(flag){
            if(j>=n){
                flag=false;
                break;
            }
        if(d>=(j*arr[j])){
            count+=arr[j];
            d=d-(j*arr[j]);
            j++;
            
        }
        else{
            if(d>=j){
                count+=(d/j);
                flag=false;
                break;
            }
            else{
                flag=false;
                break;
            }
        }
        }
        
        cout<<count<<endl;
    }
}
